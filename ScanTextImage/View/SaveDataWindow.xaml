<Window x:Class="ScanTextImage.View.SaveDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScanTextImage.View"
        mc:Ignorable="d"
        Title="Save Data"
        Height="223"
        Width="666"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!--A Style that affects all Border-->
        <Style TargetType="Border">
            <Setter Property="Background"
                    Value="GhostWhite" />
            <Setter Property="BorderBrush"
                    Value="Gainsboro" />
            <Setter Property="BorderThickness"
                    Value="1" />
        </Style>

        <!--A Style that affects all TextBox-->
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="FontSize"
                    Value="14" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="FontSize"
                    Value="14" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="HorizontalAlignment"
                    Value="Right" />
            <Setter Property="Width"
                    Value="50" />
            <Setter Property="Height"
                    Value="25" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">
                <Border>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <ComboBox Grid.Row="0"
                                  Margin="5"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  Name="cmbSaveData"
                                  SelectionChanged="cmbSaveData_SelectionChanged"
                                  VerticalContentAlignment="Center"
                                  FontSize="14"
                                  IsEnabled="True"/>

                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition x:Name="cdGridFrom"
                                                  Width="1*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Content="From: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center" />

                            <TextBlock Grid.Column="1"
                                       x:Name="tbFromLanguage"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Width="62.7"
                                       MouseEnter="tbFromLanguage_MouseEnter" />


                            <Image Grid.Column="2"
                                   Source="../Image/right-arrow.png"
                                   Width="20"
                                   Height="20" />

                            <ComboBox Grid.Column="3"
                                      Margin="5 5"
                                      IsEditable="True"
                                      Width="130"
                                      IsTextSearchEnabled="True"
                                      HorizontalAlignment="Left"
                                      Name="cmbFromLanguage"
                                      VerticalContentAlignment="Center"
                                      SelectionChanged="cmbFromLanguage_SelectionChanged" />
                        </Grid>

                        <Grid Grid.Row="2">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Name="cdGridTo"
                                                  Width="1*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Content="To: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="0 0 10 0" />

                            <TextBlock Grid.Column="1"
                                       x:Name="tbToLanguage"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Width="62.7"
                                       MouseEnter="tbToLanguage_MouseEnter" />


                            <Image Grid.Column="2"
                                   Source="../Image/right-arrow.png"
                                   Width="20"
                                   Height="20" />

                            <ComboBox Grid.Column="3"
                                      Margin="5 5"
                                      IsEditable="True"
                                      Width="130"
                                      IsTextSearchEnabled="True"
                                      HorizontalAlignment="Left"
                                      VerticalContentAlignment="Center"
                                      Name="cmbToLanguage"
                                      SelectionChanged="cmbToLanguage_SelectionChanged" />
                        </Grid>

                    </Grid>
                </Border>

            </Grid>

            <Grid Grid.Column="1">

                <Border>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>

                        <TextBox Grid.Row="0"
                                 HorizontalAlignment="Left"
                                 Name="titleSaveData"
                                 Text="Name save"
                                 Margin="5"
                                 Height="{Binding ElementName=cmbSaveData,Path=ActualHeight}"
                                 Width="{Binding ElementName=cmbSaveData,Path=ActualWidth}" />

                        <Grid Grid.Row="1">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="1">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0"
                                      Grid.Row="0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0"
                                           Content="X: "
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="15" />

                                    <Label Grid.Column="1"
                                           Content="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="15"
                                           Name="lblScaledX" />

                                    <Image Grid.Column="2"
                                           Source="../Image/right-arrow.png"
                                           Width="20"
                                           Height="20" />

                                    <Label Grid.Column="3"
                                           Content="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="15"
                                           Name="lblUpdateScaledX" />

                                </Grid>

                                <Grid Grid.Column="1"
                                      Grid.Row="0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0"
                                           Content="Y: "
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="15" />

                                    <Label Grid.Column="1"
                                           Content="0 "
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Name="lblScaledY"
                                           FontSize="15" />

                                    <Image Grid.Column="2"
                                           Source="../Image/right-arrow.png"
                                           Width="20"
                                           Height="20" />

                                    <Label Grid.Column="3"
                                           Content="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="15"
                                           Name="lblUpdateScaledY" />

                                </Grid>

                                <Grid Grid.Column="0"
                                      Grid.Row="1">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0"
                                           Content="W: "
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="15"
                                           Width="26.21" />

                                    <Label Grid.Column="1"
                                           Content="0 "
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Name="lblScaledWidth"
                                           FontSize="15" />

                                    <Image Grid.Column="2"
                                           Source="../Image/right-arrow.png"
                                           Width="20"
                                           Height="20" />

                                    <Label Grid.Column="3"
                                           Content="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="15"
                                           Name="lblUpdateScaledWidth" />

                                </Grid>

                                <Grid Grid.Column="1"
                                      Grid.Row="1">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0"
                                           Content="H: "
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="15" />

                                    <Label Grid.Column="1"
                                           Content="0 "
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Name="lblScaledHeight"
                                           FontSize="15" />

                                    <Image Grid.Column="2"
                                           Source="../Image/right-arrow.png"
                                           Width="20"
                                           Height="20" />

                                    <Label Grid.Column="3"
                                           Content="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="15"
                                           Name="lblUpdateScaledHeight" />
                                </Grid>
                            </Grid>

                        </Grid>
                    </Grid>
                </Border>

            </Grid>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1"
                  Name="actionButtonSaveSP">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Create"
                        Name="btnSaveData"
                        Click="btnSaveData_Click" />

                <Button Grid.Column="1"
                        Content="Edit"
                        Name="btnEditData"
                        Click="btnEditData_Click" />

                <Button Grid.Column="2"
                        Content="Delete"
                        Name="btnDeleteData"
                        Click="btnDeleteData_Click" />
            </Grid>




        </Grid>

    </Grid>
</Window>
